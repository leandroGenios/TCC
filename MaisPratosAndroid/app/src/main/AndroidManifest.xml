<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tcc.maispratos">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.prato.CadastroIngredientePratoActivity"></activity>
        <activity android:name=".activity.prato.CadastroPratoActivity" />
        <activity android:name=".activity.listacompras.UpdateListaComprasActivity" />
        <activity android:name=".activity.listacompras.CadastroListaComprasActivity" />
        <activity android:name=".activity.ingrediente.UpdateIngredienteActivity" />
        <activity
            android:name=".activity.listacompras.ListaComprasActivity"
            android:label="@string/title_activity_lista_compras"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.prato.PratoActivity" />
        <activity
            android:name=".activity.usuario.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.usuario.CadastroUsuarioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ingrediente.CadastroIngredienteActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".activity.ingrediente.IngredientesActivity"
            android:label="@string/title_activity_ingredientes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.prato.PratosActivity"
            android:label="@string/title_activity_pratos" />
    </application>

</manifest>